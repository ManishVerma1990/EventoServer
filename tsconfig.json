{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["EsNext", "DOM"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },

  "exclude": ["node_modules", "./dist"]
}
